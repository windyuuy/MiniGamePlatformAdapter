{
	"compilerOptions": {
		"module": "none",
		"target": "es5",
		"lib": [
			"es6",
			"dom",
			"es2015.promise"
		],
		"preserveConstEnums": true,
		"sourceMap": true,
		"outFile": "../../../dist/unityapp/unityapp.lua.txt",
		"declaration": true,
		"composite": true,
		"rootDir": "./",
		"rootDirs": [
			"../../framework",
		]
	},
	"compileOnSave": true,
	"typeAcquisition": {},
	"include": [
		"../../framework/**/*.ts",
		"./**/*.ts"
	],
	"typelua": {
		"extName": ".lua.txt"
	}
}